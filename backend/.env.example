# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=hotel_user_v2
DB_PASSWORD=change_this_password_in_production
DB_NAME=hotel_pms_v2
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# JWT Configuration (REQUIRED - change in production)
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_change_in_production
JWT_EXPIRATION=1d

# Redis Configuration (for caching - recommended for production)
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ Configuration (optional - enable when messaging is required)
RABBITMQ_URL=amqp://guest:guest@localhost:5672
RABBITMQ_PREFETCH=5

# CORS Configuration (for security headers and cross-origin requests)
CORS_ORIGIN_FRONTEND=http://localhost:3000
CORS_ORIGIN_ADMIN=http://localhost:3001

# Server Configuration
PORT=4000
NODE_ENV=development
